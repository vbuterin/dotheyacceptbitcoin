{
  "name": "Do They Accept Bitcoin?",
  "version": "1.0.2",
  "description": "Shows when the site you're visiting accepts Bitcoin.",
  "background": { "scripts": ["background.js"] },
  "page_action" :
  {
    "default_icon" : "noaccept.png",
    "default_popup" : "popup.html"
  },
  "permissions" : [
    "tabs",
    "http://*/*"
  ],
  "icons" : {
    "48" : "bitcoin48.png",
    "128" : "bitcoin128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
